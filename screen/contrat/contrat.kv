MDScreen:
    name: 'contrat'
    MDFloatLayout:
        orientation:'vertical'
        size_hint: 1,1
        pos_hint:{"center_x":.73,"center_y":.5}

        MDLabel:
            text: 'Planificator - Contrats des clients'
            font_size: 25
            font_name: 'poppins-bold'
            pos_hint:{'center_x':.5, 'center_y': .95}

        MDLabel:
            text: 'Gestion des contrats pour Cleanliness Madagascar'
            font_size: 16
            font_name: 'poppins'
            pos_hint:{'center_x':.5, 'center_y': .9}

        MDLabel:
            text: 'La liste des contrats'
            font_size: 20
            font_name: 'poppins-bold'
            pos_hint:{'center_x':.5, 'center_y': .83}

        MDBoxLayout:
            id: nouveau_contrat
            orientation: 'horizontal'
            md_bg_color: '#B3F844'
            size_hint: .22, .055
            radius: [8]
            padding: 8
            pos_hint:{'center_x':.6, 'center_y': .83}

            MDTextButton:
                text : ' Ajouter un nouveau contrat'
                font_size: 15
                font_name: 'poppins'
                padding:0,0,30,0
                on_release:
                    app.fenetre_contrat('Nouveau contrat','new_contrat')

            MDIconButton:
                icon: 'Assets/add.png'
                icon_size:20
                pos_hint:{'center_x':.9, 'center_y': .5}
                on_release:
                    app.fenetre_contrat('Nouveau contrat','new_contrat')

        MDSpinner:
            id: spinner
            size_hint: None, None
            size: dp(46), dp(46)
            pos_hint: {'center_x': .35, 'center_y': .45}
            active: False
            opacity: 0

        MDFloatLayout:
            id: tableau_contrat
            pos_hint:{'center_x': .355,'center_y': .4}
            size_hint: .71,.75
            radius: 8
